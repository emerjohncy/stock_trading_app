<div class="container-fluid vh-100">
    <div class="row">
        <div class="col-xl-1">
            <div class="d-flex flex-row justify-content-center align-items-center h-100">
              <% if @stock.logo_url? %>
                <%= image_tag(@stock.logo_url, class: "show-stock-logo") %>
              <% end %>
            </div>
        </div>
        <div class="col">
            <div class="d-flex flex-row justify-content-between align-items-center h-100">
                <div class="d-flex flex-column justify-content-center align-items-start">
                    <div class="fw-bold fs-2"><%= @stock.code %></div>
                    <div class="text-secondary fs-3"><%= @stock.name %></div>
                </div>
                <div class="fs-2 fw-bold px-1">$ <%= @stock.price %></div>
            </div>
        </div>

        <div class="col-xl-2">
            <div class="d-flex flex-row justify-content-center align-items-center h-100 w-100">
                <%= link_to "Buy", buy_stock_path(@user.id, @stock.id), class: "fs-2 text-decoration-none btn btn-success w-50 p-0" %>
            </div>
        </div>
    </div>
</div>