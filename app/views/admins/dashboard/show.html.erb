<div class="container">
  <div class="row">
    <div class="col-2">
      <%= image_tag("person-icon.png") %>
    </div>
    <div class="col-5">
      <p><%= @user.first_name %><span><%= @user.last_name %></span></p>
      <p><%= @user.email %></p>
      <p><%= @user.status %></p>
    </div>
    <div class="col-5">
      <p>Balance</p>
      <p><%= @user.balance %></p>
    </div>
  </div>
</div>

<h3>Transactions</h3>
<% @user.transactions.each do |transaction| %>
  <%= transaction.stock.name %><br>
  <%= transaction.stock.code %><br>
  <%= transaction.action %><br>
  <%= transaction.status %><br>
  <%= transaction.price %><br>
  <%= transaction.units %><br>
  <%= transaction.created_at %><br>
  <br>
<% end %>

